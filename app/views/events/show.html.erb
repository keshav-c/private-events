<h1><%= @event.name %></h1>
<p>Event created by <%= link_to @event.creator.name, user_path(@event.creator) %></p>
<p><%= @event.description %></p>
<p>This event starts at <%= @event.time %></p>
<% if !@event.attendees.empty? %>
  <p>Current participants:</p>
  <ul>
    <% @event.attendees.each do |user| %>
      <li>
        <%= link_to user.name, user_path(user) %>
      </li>
    <% end %>
  </ul>
<% end %>